<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Widget.DailyFatCounter.BottomNavigationView"
           parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="elevation">0dp</item>
    </style>

    <style name="Widget.DailyFatCounter.CounterButton"
           parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/counter_btn_tint_color_selector</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:letterSpacing">0.02</item>
    </style>

    <style name="PreferenceFragment.DailyFatCounter.PreferenceScreen" parent="Theme.DailyFatCounter">
        <item name="android:textColor">@color/blue</item>
    </style>

    <style name="ThemeOverlay.DailyFatCounter.TimePicker" parent="ThemeOverlay.MaterialComponents.TimePicker">
        <item name="colorPrimary">@color/blue</item>
    </style>
</resources>